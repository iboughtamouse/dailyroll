# Upstash Redis Credentials
# Get these from: https://console.upstash.com

UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here

# Twitch API Credentials
# Get these from: https://dev.twitch.tv/console/apps
# Create a new application, set OAuth redirect to http://localhost
# Category: Chat Bot

TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# Streamer Configuration
# Set this to your Twitch channel display name (uppercase)
# Example: AUGUST, XQCOW, POKIMANE
# This gates the API to only work for your channel

STREAMER_NAME=AUGUST

# Roll Limit Configuration
# Maximum number of rolls allowed per stream (default: 1)
# Set higher for testing (e.g., 5) to allow multiple rolls per stream

MAX_ROLLS_PER_STREAM=1
